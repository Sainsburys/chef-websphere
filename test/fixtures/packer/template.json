{
  "variables": {
    "env_home": "{{env `HOME`}}",
    "env_passport_adv_user": "{{env `PASSPORTADV_USER`}}",
    "env_passport_adv_pass": "{{env `PASSPORTADV_PW`}}"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "/Users/lachlan.munro/.vagrant.d/boxes/opscode-centos-6.6/0/virtualbox/box.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["sharedfolder", "add", "{{.Name}}", "--name", "ibm-media", "--hostpath", "{{user `env_home`}}/sainsburys/identity/media", "--automount"]
      ]
    }
  ],
  "provisioners": [
  {
    "type": "chef-solo",
    "cookbook_paths": ["../","../websphere/test/fixtures/cookbooks", "{{user `env_home`}}/.berkshelf/cookbooks"],
    "run_list": "recipe[websphere-test::was_cluster]",
    "json": {
      "websphere-test": {
        "passport_advantage": {
          "user": "{{user `env_passport_adv_user`}}",
          "password": "{{user `env_passport_adv_pass`}}"
        }
      }
    }
  }
  ]
}
